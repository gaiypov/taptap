{
  "expo": {
    "userInterfaceStyle": "automatic",
    "name": "360°",
    "slug": "360-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "app360",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.superapp.auto360",
      "infoPlist": {
        "CFBundleDisplayName": "360°"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E31E24",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.superapp.auto360"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-dev-client",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#E31E24",
          "sounds": []
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 250,
          "resizeMode": "contain",
          "backgroundColor": "#000000",
          "dark": {
            "image": "./assets/images/splash-icon.png",
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Разрешите камеру для съемки видео авто"
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Разрешите микрофон для записи звука"
        }
      ],
      "expo-video",
      "expo-asset",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "apiUrl": "http://192.168.1.16:3001/api",
      "aiMode": "development",
      "eas": {
        "projectId": "your-project-id"
      },
      "EXPO_PUBLIC_AI_MODE": "development",
      "EXPO_PUBLIC_USE_MOCK": "false",
      "EXPO_PUBLIC_SUPABASE_URL": "https://thqlfkngyipdscckbhor.supabase.co",
