# ============================================
# 360⁰ Marketplace - Environment Variables
# Production Ready for Kyrgyzstan Launch
# ============================================

# ============================================
# CORE CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3001

# ============================================
# SECURITY
# ============================================
# JWT Secret - MUST be set in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# DATABASE (SUPABASE)
# ============================================
SUPABASE_URL=https://thqlfkngyipdscckbhor.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# CORS CONFIGURATION
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,https://yourdomain.com

# ============================================
# EXTERNAL SERVICES
# ============================================

# SMS Service (for Kyrgyzstan - smspro.nikita.kg)
SMS_LOGIN=superapp
SMS_PASSWORD=your-sms-password
SMS_API_URL=https://smspro.nikita.kg/api/message
SMS_SENDER=bat-bat.kg

# ============================================
# VIDEO SERVICES
# ============================================

# API Video Service (api.video) - LEGACY (for migration period)
# ВАЖНО: Для бэкенда используйте APIVIDEO_API_KEY (без EXPO_PUBLIC_)
# Получите ключ на https://dashboard.api.video/
APIVIDEO_API_KEY=your-apivideo-api-key-here
# Альтернативное имя (для совместимости)
API_VIDEO_KEY=your-apivideo-api-key-here
# Для клиента (если нужно, но НЕ рекомендуется - используйте delegated upload)
EXPO_PUBLIC_APIVIDEO_API_KEY=your-apivideo-key

# Yandex Cloud Video (NEW - replacing api.video)
# Получите OAuth токен: https://oauth.yandex.ru/
YANDEX_OAUTH_TOKEN=your-yandex-oauth-token-here
# Folder ID в Yandex Cloud (где будут храниться видео)
YANDEX_FOLDER_ID=your-folder-id-here
# Video Channel ID (создайте канал в Yandex Cloud Video)
YANDEX_VIDEO_CHANNEL_ID=your-channel-id-here
# CDN Domain (опционально, если настроен кастомный CDN)
YANDEX_CDN_DOMAIN=your-cdn-domain.cdn.yandex.net

# AI Services
ANTHROPIC_API_KEY=your-anthropic-key
# Google Vision API (для модерации контента)
# ВАЖНО: Для бэкенда используйте GOOGLE_VISION_API_KEY (без EXPO_PUBLIC_)
# Получите ключ на https://console.cloud.google.com/
# Включите Cloud Vision API в проекте
GOOGLE_VISION_API_KEY=your-google-vision-api-key-here
# Для клиента НЕ используйте! API ключи должны быть ТОЛЬКО на бэкенде!
ROBOTFLOW_API_KEY=your-robotflow-key

# ============================================
# EXPO ENVIRONMENT VARIABLES
# ============================================
# These are used in app.json extra section
# For mobile app, use EXPO_PUBLIC_ prefix for client-side access
EXPO_PUBLIC_AI_MODE=development
EXPO_PUBLIC_USE_MOCK=false

# ============================================
# VK CLOUD STORAGE (Backups)
# ============================================
# VK Cloud Object Storage (S3-compatible) для бэкапов
# Endpoint для вашего региона (пример для Москвы)
VK_CLOUD_ENDPOINT=https://hb.ru-msk.vkcs.cloud
# Регион
VK_CLOUD_REGION=ru-msk
# Access Key ID (получите в панели VK Cloud)
VK_CLOUD_ACCESS_KEY=your-vk-cloud-access-key-here
# Secret Access Key
VK_CLOUD_SECRET_KEY=your-vk-cloud-secret-key-here
# Bucket name для бэкапов
VK_CLOUD_BUCKET_NAME=360automvp-backups

# ============================================
# MONITORING
# ============================================
GRAFANA_PASSWORD=your-grafana-password
SENTRY_DSN=your-sentry-dsn-here

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FILE UPLOADS
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_DIR=./logs

# ============================================
# BUSINESS FEATURES
# ============================================
# Free listing limit for private users
FREE_LISTING_LIMIT=5

# Promotion pricing (in KZT)
PROMOTION_BASE_PRICE=1000
PROMOTION_DAILY_PRICE=500

# ============================================
# KYRGYZSTAN SPECIFIC
# ============================================
DEFAULT_CURRENCY=KZT
DEFAULT_PHONE_PREFIX=+996
DEFAULT_LANGUAGE=ru

# ============================================
# DEVELOPMENT OVERRIDES
# ============================================
# Uncomment for development
# NODE_ENV=development
# LOG_LEVEL=debug
# RATE_LIMIT_MAX_REQUESTS=1000